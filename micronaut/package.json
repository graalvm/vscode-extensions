{
	"name": "micronaut",
	"displayName": "GraalVM Tools for Micronaut",
	"description": "Micronaut support for VS Code",
	"version": "0.5.18",
	"preview": true,
	"license": "SEE LICENSE IN LICENSE.txt",
	"publisher": "oracle-labs-graalvm",
	"author": {
		"name": "Oracle Labs"
	},
	"icon": "images/graalvm-logo.png",
	"galleryBanner": {
		"color": "#000000",
		"theme": "dark"
	},
	"homepage": "https://github.com/graalvm/vscode-extensions/blob/master/micronaut/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/graalvm/vscode-extensions.git"
	},
	"bugs": {
		"url": "https://github.com/graalvm/vscode-extensions/issues"
	},
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"keywords": [
		"native image",
		"microservices",
		"java"
	],
	"activationEvents": [
		"onCommand:extension.micronaut.showWelcomePage",
		"onCommand:extension.micronaut.createProject",
		"workspaceContains:**/micronaut-cli.yml"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Micronaut",
			"properties": {
				"micronaut.showWelcomePage": {
					"type": "boolean",
					"default": true,
					"description": "Show Micornaut Tools page on extension activation"
				},
				"micronaut.home": {
					"type": "string",
					"default": "",
					"description": "Optional path to Micronaut CLI installation",
					"scope": "machine"
				},
				"micronaut.launchUrl": {
					"type": "string",
					"default": "",
					"description": "Optional Micronaut Launch URL (e.g. 'https://launch.micronaut.io')"
				}
			}
		},
		"commands": [
			{
				"command": "extension.micronaut.showWelcomePage",
				"title": "Show Micronaut Tools Page",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.createProject",
				"title": "Create Micronaut Project",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.build",
				"title": "Build ...",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.deploy",
				"title": "Deploy ...",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.buildNativeImage",
				"title": "Build Native Image",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.kubernetes.createDeploy",
				"title": "Create Kubernetes Deployment Resource",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.kubernetes.deploy",
				"title": "Deploy to Kubernetes",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.kubernetes.createService",
				"title": "Create Kubernetes Service Resource",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.kubernetes.run",
				"title": "Run in Kubernetes",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.kubernetes.debug",
				"title": "Debug in Kubernetes",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.odb.register",
				"title": "Register Database for Micronaut",
				"category": "Micronaut"
			},
                        {
 				"command": "extension.micronaut.oci.register",
 				"title": "Register Database for Micronaut",
 				"category": "Micronaut"
 			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "extension.micronaut.build",
					"when": "micronautProjectExists && javaHomeSet"
				},
				{
					"command": "extension.micronaut.deploy",
					"when": "micronautProjectExists && javaHomeSet"
				},
				{
					"command": "extension.micronaut.buildNativeImage",
					"when": "micronautProjectExists && javaHomeSet"
				},
				{
					"command": "extension.micronaut.kubernetes.createDeploy",
					"when": "kubectl.available"
				},
				{
					"command": "extension.micronaut.kubernetes.deploy",
					"when": "kubectl.available"
				},
				{
					"command": "extension.micronaut.kubernetes.createService",
					"when": "kubectl.available"
				},
				{
					"command": "extension.micronaut.kubernetes.run",
					"when": "kubectl.available && graalVMExt.available"
				},
				{
					"command": "extension.micronaut.kubernetes.debug",
					"when": "kubectl.available && graalVMExt.available"
				},
				{
					"command": "extension.micronaut.odb.register",
					"when": "false"
				},
                                {
 					"command": "extension.micronaut.oci.register",
 					"when": "false"
 				}
			],
			"view/item/context": [
				{
					"command": "extension.micronaut.odb.register",
					"when": "view == oracleDBObjectExplorer && viewItem =~ /Connection/ && dbAddConnectionPresent",
					"group": "connection_3@1"
				},
                                {
 					"command": "extension.micronaut.oci.register",
 					"when": "view == oracleCloudExplorer && viewItem =~ /(ociNonDedicatedDatabaseItem|ociDedicatedDatabaseItem)/ && dbAddConnectionPresent",
 					"group": "CloudExplorer1@11"
 				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"compile": "webpack --mode development",
		"info": "webpack --display-modules",
		"watch": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"lint": "tslint -p ./"
	},
	"dependencies": {
		"decompress": "4.2.1",
		"jdk-utils": "^0.4.4",
		"mustache": "4.0.1",
		"vscode-kubernetes-tools-api": "^1.3.0"
	},
	"devDependencies": {
		"@types/decompress": "^4.2.4",
		"@types/glob": "^7.1.1",
		"@types/mustache": "^4.2.2",
		"@types/node": "^14.16.0",
		"@types/vscode": "^1.64.0",
		"glob": "^7.1.4",
		"tslint": "^6.1.3",
		"ts-loader": "^9.4.2",
		"typescript": "^4.9.5",
		"webpack": "^5.76.0",
		"webpack-cli": "^5.0.1"
	}
}
