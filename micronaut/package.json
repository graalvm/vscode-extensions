{
	"name": "micronaut",
	"displayName": "GraalVM Tools for Micronaut",
	"description": "Micronaut support for VS Code",
	"version": "0.5.7",
	"preview": true,
	"license": "SEE LICENSE IN LICENSE.txt",
	"publisher": "oracle-labs-graalvm",
	"author": {
		"name": "Oracle Labs"
	},
	"icon": "images/micronaut.png",
	"galleryBanner": {
		"color": "#000000",
		"theme": "dark"
	},
	"homepage": "https://github.com/graalvm/vscode-extensions/blob/master/micronaut/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/graalvm/vscode-extensions.git"
	},
	"bugs": {
		"url": "https://github.com/graalvm/vscode-extensions/issues"
	},
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"keywords": [
		"native image",
		"microservices",
		"java"
	],
	"activationEvents": [
		"onCommand:extension.micronaut.showWelcomePage",
		"onCommand:extension.micronaut.createProject",
		"workspaceContains:**/micronaut-cli.yml"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Micronaut",
			"properties": {
				"micronaut.showWelcomePage": {
					"type": "boolean",
					"default": true,
					"description": "Show Micornaut Tools page on extension activation"
				},
				"micronaut.home": {
					"type": "string",
					"default": "",
					"description": "Optional path to Micronaut CLI installation"
				},
				"micronaut.launchUrl": {
					"type": "string",
					"default": "",
					"description": "Optional Micronaut Launch URL (e.g. 'https://launch.micronaut.io')"
				}
			}
		},
		"commands": [
			{
				"command": "extension.micronaut.showWelcomePage",
				"title": "Show Micronaut Tools Page",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.createProject",
				"title": "Create Micronaut Project",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.build",
				"title": "Build ...",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.deploy",
				"title": "Deploy ...",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.buildNativeImage",
				"title": "Build Native Image",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.kubernetes.createDeploy",
				"title": "Create Kubernetes Deployment Resource",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.kubernetes.deploy",
				"title": "Deploy to Kubernetes",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.kubernetes.createService",
				"title": "Create Kubernetes Service Resource",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.kubernetes.run",
				"title": "Run in Kubernetes",
				"category": "Micronaut"
			},
			{
				"command": "extension.micronaut.kubernetes.debug",
				"title": "Debug in Kubernetes",
				"category": "Micronaut"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "extension.micronaut.build",
					"when": "micronautProjectExists && javaHomeSet"
				},
				{
					"command": "extension.micronaut.deploy",
					"when": "micronautProjectExists && javaHomeSet"
				},
				{
					"command": "extension.micronaut.buildNativeImage",
					"when": "micronautProjectExists && javaHomeSet"
				},
				{
					"command": "extension.micronaut.kubernetes.createDeploy",
					"when": "kubectl.available"
				},
				{
					"command": "extension.micronaut.kubernetes.deploy",
					"when": "kubectl.available"
				},
				{
					"command": "extension.micronaut.kubernetes.createService",
					"when": "kubectl.available"
				},
				{
					"command": "extension.micronaut.kubernetes.run",
					"when": "kubectl.available"
				},
				{
					"command": "extension.micronaut.kubernetes.debug",
					"when": "kubectl.available"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"compile": "webpack --mode development",
		"info": "webpack --display-modules",
		"watch": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"lint": "tslint -p ./"
	},
	"dependencies": {
		"decompress": "4.2.1",
		"vscode-kubernetes-tools-api": "^1.0.0",
		"mustache": "4.0.1"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.49.0",
		"@types/decompress": "4.2.3",
		"@types/mustache": "^4.0.1",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"ts-loader": "^6.2.1",
		"webpack": "^5.40.0",
		"webpack-cli": "^4.7.2"
	},
	"extensionDependencies": [
		"oracle-labs-graalvm.graalvm"
	]
}
